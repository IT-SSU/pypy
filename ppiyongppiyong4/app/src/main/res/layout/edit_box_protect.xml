<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:orientation="vertical"
>

    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_protect_relation"
            android:hint="보호자와의 관계"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/edit_protect_name"
            android:layout_marginStart="20dp"
    />
    <EditText
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_protect_phone"
            android:hint="010-0000-0000"

            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_protect_name" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edit_protect_name"
            android:hint="보호자 이름"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="수정"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:id="@+id/btn_protect_update"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/edit_protect_phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="삭제"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:id="@+id/btn_protect_delete"
            app:layout_constraintStart_toEndOf="@+id/btn_protect_update" android:layout_marginStart="44dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/edit_protect_phone"/>
</android.support.constraint.ConstraintLayout>