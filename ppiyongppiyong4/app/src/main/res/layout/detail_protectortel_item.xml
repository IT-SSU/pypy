<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="100dp"
                                             android:background="@drawable/item_border"
                                             android:layout_marginTop="2dp"
                                             android:layout_marginBottom="2dp"
                                             android:layout_marginStart="4dp"
                                             android:layout_marginEnd="4dp">

    <TextView
            android:text="이름"
            android:layout_width="155dp"
            android:layout_height="26dp"
            android:id="@+id/txtProtectName" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="연락처"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:id="@+id/txtProtectPhone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtProtectName" android:layout_marginTop="8dp"/>
    <TextView
            android:text="관계"
            android:layout_width="124dp"
            android:layout_height="26dp"
            android:id="@+id/txtRelation" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtProtectName" android:layout_marginStart="44dp"
    />
</android.support.constraint.ConstraintLayout>